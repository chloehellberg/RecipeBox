@{
  Layout = "_Layout";
}

@using RecipeBox.Models;
@model List<RecipeBox.Models.Tag>;
@Html.ActionLink(" Add", "Create", null, null, new { @class="btn btn-info fa fa-user-plus" })
@Html.ActionLink(" Home", "Index", "Home", null, new { @class="btn btn-info fa fa-home" })
<h1>Tags</h1>

@if (@Model.Count == 0)
{
  <h3>No Tags have been added yet!</h3>
} 
<ul>
  @foreach (Tag tag in Model)
  {
    <li>@Html.ActionLink($"{tag.TagName}", "Details", new { id = tag.TagId })</li>
    
  }
</ul>
<p>@Html.ActionLink("Add new Tag", "Create")</p>